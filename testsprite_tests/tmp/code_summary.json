{
    "tech_stack": [
        "Python",
        "FastAPI",
        "PostgreSQL",
        "SQLAlchemy",
        "AsyncPG",
        "Redis"
    ],
    "features": [
        {
            "name": "Auth API",
            "description": "User authentication, registration, login, 2FA, password management",
            "files": [
                "backend/src/api/auth.py"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/auth/register": {
                        "post": {
                            "summary": "Register new user",
                            "requestBody": {
                                "content": {
                                    "application/json": {
                                        "schema": {
                                            "type": "object",
                                            "properties": {
                                                "email": {
                                                    "type": "string"
                                                },
                                                "password": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "/auth/login": {
                        "post": {
                            "summary": "Login user",
                            "requestBody": {
                                "content": {
                                    "application/json": {
                                        "schema": {
                                            "type": "object",
                                            "properties": {
                                                "email": {
                                                    "type": "string"
                                                },
                                                "password": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "name": "Grid Bot API",
            "description": "Grid trading bot management, configuration, start/stop, stats",
            "files": [
                "backend/src/api/grid_bot.py"
            ],
            "api_doc": {
                "openapi": "3.0.0",
                "paths": {
                    "/grid-bot/{bot_id}/config": {
                        "get": {
                            "summary": "Get grid config"
                        },
                        "post": {
                            "summary": "Save grid config"
                        }
                    },
                    "/grid-bot/{bot_id}/start": {
                        "post": {
                            "summary": "Start grid bot"
                        }
                    },
                    "/grid-bot/{bot_id}/stop": {
                        "post": {
                            "summary": "Stop grid bot"
                        }
                    }
                }
            }
        },
        {
            "name": "Backtest API",
            "description": "Backtesting strategies",
            "files": [
                "backend/src/api/backtest.py",
                "backend/src/api/user_backtest.py"
            ]
        },
        {
            "name": "Admin API",
            "description": "Admin management for users, bots, monitoring",
            "files": [
                "backend/src/api/admin_users.py",
                "backend/src/api/admin_bots.py"
            ]
        }
    ]
}